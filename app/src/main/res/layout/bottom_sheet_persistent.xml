<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="32dp">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_margin="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Heading -->
    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Booking Information"
        android:textStyle="bold"
        android:textSize="@dimen/_19ssp"
        android:textColor="@color/text_black"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginVertical="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/closeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Customer Name -->
    <TextView
        android:id="@+id/customerNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Customer Name: John Smith"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toBottomOf="@id/headingTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginVertical="@dimen/_18sdp"/>

    <!-- Customer Place -->
    <TextView
        android:id="@+id/customerPlaceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Customer Place: Ernakulam"
        android:textColor="@color/text_black"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginVertical="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/customerNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- Shop Branch -->
    <TextView
        android:id="@+id/shopBranchTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Shop Branch: Sajith &amp; Sujit"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toBottomOf="@id/customerPlaceTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_18sdp"
       
        />

    <!-- Time -->
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Time: 8:00 am - 8:15 am"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toBottomOf="@id/shopBranchTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_18sdp"
       
        />

    <!-- Refer -->
    <TextView
        android:id="@+id/referTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Refer: Salesman Name"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toBottomOf="@id/timeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_18sdp"
        />

    <!-- Note -->
    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Note : "
        android:textColor="@color/text_black"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginVertical="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/referTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       
        />

    <!-- Services -->
    <TextView
        android:id="@+id/serviceOneTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Service One"
        android:textColor="@color/text_black"
        android:layout_marginHorizontal="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/noteTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       
       />

    <TextView
        android:id="@+id/serviceTwoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Service Two"
        android:textColor="@color/text_black"
        android:layout_marginHorizontal="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/serviceOneTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        
        />

    <TextView
        android:id="@+id/serviceThreeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Service Three"
        android:textColor="@color/text_black"
        android:layout_marginHorizontal="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/serviceTwoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/serviceThreeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginVertical="@dimen/_18sdp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center">

        <!-- Call Button -->
        <TextView
            android:id="@+id/callButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start a call"
            android:background="@drawable/button_gradient"
            android:paddingVertical="@dimen/_10sdp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/primary_blue"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:layout_marginStart="@dimen/_14sdp"
        android:orientation="vertical"
        android:gravity="center|center_vertical"
        android:layout_gravity="center">
        <!-- Completed Button -->
        <TextView
            android:id="@+id/completedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:background="@drawable/button_gradient"
            android:paddingVertical="@dimen/_10sdp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/primary_blue"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            />
    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
