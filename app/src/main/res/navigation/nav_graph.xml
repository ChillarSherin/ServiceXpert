<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mobileFragment">

    <fragment
        android:id="@+id/mobileFragment"
        android:name="com.chillarcards.servicexpert.ui.register.MobileFragment"
        android:label="MobileFragment"
        tools:layout="@layout/fragment_mobile">
        <action
            android:id="@+id/action_mobileFragment_to_OTPFragment"
            app:destination="@id/OTPFragment" />
        <argument
            android:name="isVerifyTrm"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="mobileNo"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="com.chillarcards.servicexpert.ui.register.OTPFragment"
        android:label="OTPFragment"
        tools:layout="@layout/fragment_otp">
        <action
            android:id="@+id/action_OTPFragment_to_RegFragment"
            app:destination="@id/RegisterFragment" />
        <argument
            android:name="mobile"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/RegisterFragment"
        android:name="com.chillarcards.servicexpert.ui.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_RegisterFragment_to_bankFragment"
            app:destination="@id/BankFragment" />
        <action
            android:id="@+id/action_RegisterFragment_to_mapFragment"
            app:destination="@id/MapFragment" />
        <argument
            android:name="mobile"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/MapFragment"
        android:name="com.chillarcards.servicexpert.ui.register.MapsFragment"
        android:label="MapsFragment"
        tools:layout="@layout/fragment_maps">
        <action
            android:id="@+id/action_MapFragment_to_RegFragment"
            app:destination="@id/RegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/BankFragment"
        android:name="com.chillarcards.servicexpert.ui.register.BankFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_bank">
        <action
        android:id="@+id/action_BankFragment_to_TimeFragment"
        app:destination="@id/TimeFragment" />
    </fragment>

    <fragment
        android:id="@+id/TimeFragment"
        android:name="com.chillarcards.servicexpert.ui.register.WorkHoursFragment"
        android:label="WorkHoursFragment"
        tools:layout="@layout/fragment_work_hours">
        <action
            android:id="@+id/action_TimeFragment_to_HomeFragment"
            app:destination="@id/homeBaseFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeBaseFragment"
        android:name="com.chillarcards.servicexpert.ui.home.HomeBaseFragment"
        android:label="HomeBaseFragment"
        tools:layout="@layout/fragment_home_base" >
        <action
            android:id="@+id/action_homebase_to_addStaffFragment"
            app:destination="@id/addStaffFragment" />
    </fragment>
</navigation>